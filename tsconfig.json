{
  "compilerOptions": {
    "jsx": "react",
    "module": "ESNext",
    "declaration": true,
    "target": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "outDir": "dist/",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noEmit": true
  },
  "include": ["src/", "vitest.config.ts", "tsup.config.ts"],
  "exclude": ["node_modules/"]
}
